{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Wave",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#main_function" },
    { "include": "#functions" },
    { "include": "#constants" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#operators" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        { "name": "comment.line.double-slash.wave", "match": "//.*$" },
        { "name": "comment.block.wave", "begin": "/\\*", "end": "\\*/" }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.wave",
          "match": "\\b(fun|var|return|if|else|while|for|break|continue|import|extern|struct|enum)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.wave",
          "match": "\\b(i8|i16|i32|i64|u8|u16|u32|u64|f32|f64|bool|byte|str)\\b"
        },
        {
          "name": "storage.type.container.wave",
          "match": "\\b(ptr|array)\\b"
        },
        {
          "name": "punctuation.definition.typeparameters.begin.wave",
          "match": "<"
        },
        {
          "name": "punctuation.definition.typeparameters.end.wave",
          "match": ">"
        }
      ]
    },
    "main_function": {
      "patterns": [
        {
          "name": "entity.name.function.main.wave",
          "match": "\\bfun\\s+main\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.wave",
          "match": "\\bfun\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "entity.name.function.wave" }
          }
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.wave",
          "match": "\\b(true|false|null)\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.wave",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.wave",
          "match": "\\\\."
        },
        {
          "name": "variable.parameter.format.wave",
          "match": "\\{[^}]*\\}"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.wave",
          "match": "\\b[0-9]+(\\.[0-9]+)?\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.wave",
          "match": "!=|==|<=|>=|<|>|\\+|\\-|\\*|\\/|%|\\+=|\\-=|\\*=|\\/=|&&|\\|\\||!|\\?|:"
        }
      ]
    }
  },
  "scopeName": "source.wave"
}
